<div class="col-lg-6 col-lg-offset-3">
<%= f.label :repairman_id %>
  <%= f.collection_select :repairman_id, Repairman.all, :id, :name, {selected: repairman_id} %><br><br>

  <%= f.label :customer_id %>
  <%= f.collection_select :customer_id, Customer.all, :id, :name %><br><br>

  <%= f.label "Location" %>
  <%= f.select(:location, options_for_select(['1', '2', '3'])) %><br><br>

  <div>
    <%= f.fields_for :tickets do |ticket| %>
      <h4>Ticket:</h4>
      <%= ticket.label :description %>
      <%= ticket.text_field :description %><br><br>

      <%= ticket.label :price %>
      <%= ticket.text_field :price %><br><br>
    <% end %>
  </div>

  <%= f.submit id: 'create-job' %>
